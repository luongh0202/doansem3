    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Bạn có muốn đăng xuất?</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="@Url.Action("LogOut","Login")">Logout</a>
                </div>
            </div>
        </div>
    </div>
    <!-- View Modal-->
    <div class="modal fade" id="ViewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-view" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thông tin người dùng</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span class="x-close" aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <div class="form-group" style="display:flex;">
                            <div class="col-md-6">
                                <label for="txtuser">Tài khoản</label>
                                <div>
                                    <input type="text" id="txtuser" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="txtname">Họ tên</label>
                                <div>
                                    <input type="text" id="txtname" class="form-control remove-edit" disabled />
                                </div>
                            </div>

                        </div>


                        <div class="form-group" style="display:flex;">
                            <div class="col-md-6">
                                <label for="txtaddress">Địa chỉ</label>
                                <input type="text" id="txtaddress" class="form-control remove-edit" disabled />
                            </div>

                            <div class="col-md-6">
                                <label for="txtemail">Email</label>
                                <input type="text" id="txtemail" class="form-control remove-edit" disabled />
                            </div>

                        </div>
                        <div class="form-group" style="display:flex;">
                            <div class="col-md-6">
                                <label for="txtphone">Số điện thoại</label>
                                <div>
                                    <input type="text" id="txtphone" class="form-control remove-edit" disabled />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="txtcreateDate">Ngày tạo</label>
                                <div>
                                    <input type="text" id="txtcreateDate" class="form-control" disabled />
                                </div>
                            </div>

                        </div>
                        <div class="form-group" style="display:flex;">
                            <div class="col-md-6">
                                <label for="txtphone">Tỉnh/ Thành Phố</label>
                                <div>
                                    <select class="form-control remove-edit" id="city" disabled></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="txtcreateDate">Quận/ Huyện</label>
                                <div>
                                    <select class="form-control remove-edit" id="district" disabled></select>
                                </div>
                            </div>

                        </div>
                        <div class="form-group" style="display:flex;">
                            <div class="col-md-6">
                                <label for="txtphone">Phường/ Xã</label>
                                <div>
                                    <select class="form-control remove-edit" id="ward" disabled></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="txtpassWord">Mật khẩu</label>
                                <div class="pass_eyes">
                                    <input type="password" id="txtpassWord" class="form-control remove-edit pass" disabled ="disabled" />
                                </div>
                            </div>

                        </div>

                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary close-modal" type="button" data-dismiss="modal">Đóng</button>
                    <a class="btn btn-primary edit" href="#">Sửa</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
