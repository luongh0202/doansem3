<body id="page-top">
    @{ Html.RenderAction("_MenuTop", "Home"); }
    <div id="wrapper">

        <!-- Sidebar -->
        @{Html.RenderAction("_LeftMenu", "Home"); }
        <div id="content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="modal-header">
                            <h1>@RenderSection("header", required: false)</h1>
                        </div>

                    </div>
                </div>
                @RenderBody()
            </div>
            <footer class="sticky-footer">
                <div class="my-auto col-md-3">
                    <div id="clock"></div>
                    <div id="dt"></div>
                </div>
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2019</span>
                    </div>

                </div>


            </footer>
        </div>
        <!-- /.content-wrapper -->
