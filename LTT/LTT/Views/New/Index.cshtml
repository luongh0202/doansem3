                    <a href="#">Woocommerce</a>
                    <a href="#">Store</a>
                    <a href="#">Business</a>
                </div>

            </aside> <!-- end sidebar -->

        </div> <!-- end row -->
    </div> <!-- end container -->
</section> <!-- end blog standard -->