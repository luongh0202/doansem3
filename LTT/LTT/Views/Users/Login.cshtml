@model LTT.Models.ViewModels.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Title -->
<section class="page-title text-center">
    <div class="container relative clearfix">
        <div class="title-holder">
            <div class="title-text">
                <h1 class="uppercase">login</h1>
            </div>
        </div>
    </div>
</section> <!-- end page title -->
<!-- login -->
<section class="section-wrap login-register pt-0 pb-40">
    <div class="container">
        <div class="row center_custom">
            <div class="col-sm-5 col-sm-offset-1 mb-40">
                @if (ViewBag.err != null)
                {
                    <p class="alert alert-danger">@ViewBag.err</p>
                }
                @using (Html.BeginForm())
                {
                    <div class="login">
                        <p class="form-row form-row-wide">
                            <label>
                                username or email
                                <abbr class="required" title="required">*</abbr>
                            </label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input-text" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </p>
                        <p class="form-row form-row-wide">
                            <label>
                                password
                                <abbr class="required" title="required">*</abbr>
                            </label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input-text" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </p>
                        <input type="submit" value="Login" class="btn">
                        <input type="checkbox" class="input-checkbox" id="remember" name="remember" value="1">
                        <label for="remember" class="checkbox">Remember me</label>
                        <a href="#">Lost Password?</a>
                    </div>
                }

            </div>
        </div>
    </div>
</section> <!-- end login -->
